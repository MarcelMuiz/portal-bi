  <script>
    // Pega todos os bot√µes de relat√≥rio
    const reportButtons = document.querySelectorAll(".report-btn");
    const iframe = document.getElementById("pbiFrame");
    const currentReportName = document.getElementById("current-report-name");
    const openNewTabBtn = document.getElementById("open-new-tab");

    let currentUrl = iframe.src;

    // Fun√ß√£o para trocar de relat√≥rio
    function selectReport(button) {
      const url = button.getAttribute("data-url");
      const name = button.getAttribute("data-name") || "Relat√≥rio Power BI";

      // Atualiza iframe
      iframe.src = url;
      currentUrl = url;

      // Atualiza t√≠tulo
      currentReportName.textContent = name;

      // Atualiza estado visual dos bot√µes
      reportButtons.forEach((btn) => btn.classList.remove("active"));
      button.classList.add("active");
    }

    // Adiciona evento de clique a cada bot√£o
    reportButtons.forEach((button) => {
      button.addEventListener("click", () => selectReport(button));
    });

    // Bot√£o "Abrir em nova aba"
    openNewTabBtn.addEventListener("click", () => {
      if (currentUrl) {
        window.open(currentUrl, "_blank");
      }
    });
  </script>
